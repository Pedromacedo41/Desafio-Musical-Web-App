<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Spotted</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-3">
                <div class="navbar navbar-inverse navbar-fixed-top">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <img src="~/Content/Spotify-icon.jpg" width="45" height="45" />
                        @Html.ActionLink("Spotted", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        <div class="navbar navbar-inverse navbar-fixed-top">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>   <!--Links para as paginas do site-->
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                <li>
                                    @Html.ActionLink("Search Context", "Contextual", "Media")
                                </li>
                                <li>@Html.ActionLink("Search Name", "Nominal", "Media")</li>
                                <li>@Html.ActionLink("Create", "Create", "Media")</li>
                                <li>@Html.ActionLink("Index", "Index", "Media")</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="container body-content">
                    @RenderSection("Button", false); <p> Write me</p>
                </div>
            </div>

            <div class="col-md-9">
                @RenderBody();
            </div>

        </div>

    </div>
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year -My MVC Musical Challenge</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>







